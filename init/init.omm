;include:
;s json

var data = [
    "package": "",
    "version": "1.0.0",
]

var main = fn() => {
    mango := files.create:("mango.json")
    var attrs = []

    each (data, k, v) => {
        msg := "Enter field " + k

        if (v != "") => msg+=" default \"" + v + "\""

        attrs::(k) = input:(msg)
    }

    mango::Write:(json.marshalf:(attrs, "\t"))
}